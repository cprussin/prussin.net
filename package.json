{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "pnpm": "^10.25.0",
    "node": "^22.21.1"
  },
  "scripts": {
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix .",
    "install:modules": "[ $CI ] && true || pnpm install",
    "test:format": "run-jest --selectProjects format",
    "test:lint": "run-jest --selectProjects lint",
    "turbo": "[ ! -d node_modules ] && pnpm install; turbo"
  },
  "devDependencies": {
    "@cprussin/eslint-config": "^5.1.1",
    "@cprussin/jest-config": "^3.1.3",
    "@cprussin/prettier-config": "^3.0.1",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3"
  }
}
