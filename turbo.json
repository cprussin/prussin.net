{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "fix": {
      "dependsOn": ["fix:format", "fix:lint"],
      "cache": false
    },
    "//#fix": {
      "dependsOn": ["//#fix:format", "//#fix:lint"],
      "cache": false
    },
    "fix:format": {
      "dependsOn": ["fix:lint"],
      "cache": false
    },
    "//#fix:format": {
      "dependsOn": ["//#fix:lint"],
      "cache": false
    },
    "fix:lint": {
      "cache": false
    },
    "//#fix:lint": {
      "cache": false
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["test:format", "test:lint", "test:types", "test:unit"]
    },
    "//#test": {
      "dependsOn": ["//#test:format", "//#test:lint"]
    },
    "test:format": {},
    "//#test:format": {},
    "test:lint": {},
    "//#test:lint": {},
    "test:types": {},
    "test:unit": {
      "outputs": ["coverage/**"]
    },
    "//#test:unit": {
      "outputs": ["coverage/**"]
    }
  }
}
