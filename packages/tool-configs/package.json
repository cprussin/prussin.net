{
  "name": "@prussin.net/tool-configs",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "fix": "pnpm run fix:lint && pnpm run fix:format",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix .",
    "test": "concurrently \"pnpm run test:dependencies\" \"pnpm run test:lint\" \"TZ=UTC jest --coverage\"",
    "test:dependencies": "npm-check",
    "test:format": "jest --selectProjects format",
    "test:lint": "eslint .",
    "test:unit-test": "TZ=UTC jest --coverage --selectProjects unit-test"
  },
  "dependencies": {
    "@eslint/eslintrc": "latest",
    "@eslint/js": "latest",
    "@testing-library/jest-dom": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "latest",
    "eslint-config-turbo": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-jest-dom": "latest",
    "eslint-plugin-jsonc": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-testing-library": "latest",
    "eslint-plugin-unicorn": "latest",
    "globals": "latest",
    "jest-environment-jsdom": "latest",
    "jest-runner-prettier": "latest",
    "jsonc-eslint-parser": "latest",
    "next": "latest"
  },
  "devDependencies": {
    "concurrently": "latest",
    "eslint": "latest",
    "jest": "latest",
    "npm-check": "latest",
    "prettier": "latest",
    "react": "latest",
    "react-dom": "latest",
    "ts-jest": "latest",
    "typescript": "latest"
  }
}
